{
  "manifest_version": 3,
  "name": "Agentic AI Extension",
  "version": "1.0.0",
  "description": "Agentic AI Chrome Extension with tool calling: Parse JSON API, filter data, export to Excel",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Agentic AI Assistant"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
