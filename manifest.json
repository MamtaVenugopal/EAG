{
  "manifest_version": 3,
  "name": "Google Sheet Viewer with Gemini AI",
  "version": "1.0.0",
  "description": "Extract Google Sheets data and process with Google Gemini Flash 2.0 LLM to return JSON format",
  "permissions": ["activeTab", "storage", "clipboardWrite"],
  "host_permissions": ["https://sheets.googleapis.com/*", "https://generativelanguage.googleapis.com/*"],
  "action": {"default_popup": "popup.html", "default_title": "Sheet Viewer + Gemini"},
  "background": {"service_worker": "background.js"},
  "content_scripts": [{"matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_end"}],
  "web_accessible_resources": [{"resources": ["styles.css", "script.js", "jspdf.min.js"], "matches": ["<all_urls>"]}]
}
